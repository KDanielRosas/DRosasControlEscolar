@model ML.Result
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h2> Alumnos </h2>
        </div>
        <div class="col">
            <div style="float:right">
                @Html.ActionLink("Agregar Alumno", "Form", "Alumno", htmlAttributes: new { @class = "btn btn-success" })
            </div><!--style-->
        </div>
        
        <hr />
    </div> <!--row-->

    <div class="row" style="text-align:center">
        <div class="col-6 col-md-2"></div>
        <div class="col-6 col-md-7">

            @if (Model.Objects != null)
            {

                <table class="table table-bordered table-responsive">
                    <thead>
                        <tr>
                            <td class="text-center col-xs-1" style="font-weight:bold;">Editar</td>

                            <td class="visually-hidden">IdAlumno</td>
                            <td class="text-center" style="font-weight:bold;">Nombre</td>
                            <td class="text-center" style="font-weight:bold;">ApellidoPaterno</td>
                            <td class="text-center" style="font-weight:bold;">ApellidoMaterno</td>

                            <td class="text-center col-xs-1" style="font-weight:bold;">Eliminar</td>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (ML.Alumnos alumno in Model.Objects)
                        {
                            <tr>
                                <td class="text-center">
                                    <a class="btn btn-warning"
                                       href="@Url.Action("Form", "Alumno",
                                                            new { IdAlumno= alumno.IdAlumno})">
                                    <i class="fa-regular fa-pen-to-square"></i></a>
                                </td>


                                <td class="visually-hidden">@alumno.IdAlumno</td>
                                <td class="col-sm-2">@alumno.Nombre</td>
                                <td class="col-sm-2">@alumno.ApellidoPaterno</td>
                                <td class="col-sm-2">@alumno.ApellidoMaterno</td>

                                <td class="col-sm-1 text-center">
                                    <a class="btn btn-danger"
                                       href="@Url.Action("Delete","Alumno",
                                                            new { IdAlumno = alumno.IdAlumno})">
                                        <i class="fa-solid fa-trash"></i></a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            }

            else
            {
                <div class="alert alert-danger" role="alert">Ocurrio un error!!</div>
            }

        </div>

    </div>

</div><!--container-->
