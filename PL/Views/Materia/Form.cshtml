@model ML.Materias
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h2>Materia</h2>
            <p>Ingrese los datos de la materia</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Form", "Materia", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <form class="dl-horizontal">
                    <div class="row">
                        <div>
                            @Html.LabelFor(model => model.IdMateria, new { @class = "visually-hidden" })
                            @Html.TextBoxFor(model => model.IdMateria, new { @class = "visually-hidden" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            @Html.LabelFor(model => model.Nombre)
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa-solid fa-quote-right"></i></span>
                                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @id = "txtNombre" })
                                @Html.ValidationMessageFor(model => model.Nombre)
                            </div>
                        </div>

                        <div class="col">
                            @Html.LabelFor(model => model.Costo)
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa-solid fa-dollar-sign"></i></span>
                                @Html.TextBoxFor(model => model.Costo, new { @class = "form-control", @id = "txtCosto" })
                                @Html.ValidationMessageFor(model => model.Costo)
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <hr />
                        <div class="col-md-3">
                            <input type="submit" value="Guardar" class="btn btn-success" />
                        </div>
                        <div class="col" style="text-align:end">
                            @Html.ActionLink("Regresar", "GetAll", "Materia", htmlAttributes: new { @class = "btn btn-danger" })
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>

</div><!-- container -->

