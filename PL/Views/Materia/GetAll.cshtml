@model ML.Materias
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h2> Materias </h2>
        </div>
        <div class="col" style="float:right; text-align:end">
            @Html.ActionLink("Agregar Materia","Form","Materia", htmlAttributes: new { @class = "btn btn-success" })
        </div>
        <p>Presione el botón "Agregar Materia" si desea registrar una nueva materia</p>
        <hr />
    </div>

    <div class="row">
        <div class="col">
            @if(Model.ListMaterias != null)
            {
                <table class="table table-bordered table-responsive">
                    <thead>
                        <tr>
                            <td class="text-center col-xs-1" style="font-weight:bold;">Editar</td>
                            <td class="visually-hidden">IdMateria</td>
                            <td class="text-center" style="font-weight:bold;">Nombre</td>
                            <td class="text-center" style="font-weight:bold;">Costo</td>
                            <td class="text-center col-xs-1" style="font-weight:bold;">Eliminar</td>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (ML.Materias materia in Model.ListMaterias)
                        {
                            <tr>
                                <td class="text-center">
                                    <a class="btn btn-warning"
                                       href="@Url.Action("Form","Materia",
                                            new { IdMateria = materia.IdMateria })"><i class="fa-regular fa-pen-to-square"></i></a>
                                </td>

                                <td class="visually-hidden">@materia.IdMateria</td>
                                <td class="col">@materia.Nombre</td>
                                <td class="col">@materia.Costo</td>
                                <td class="text-center">
                                    <a class="btn btn-danger" href="@Url.Action("Delete","Materia",
                                                new { IdMateria = materia.IdMateria })"><i class="fa-solid fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-danger" role="alert">No hay registros</div>
            }
        </div>
    </div>

</div> <!-- container -->

